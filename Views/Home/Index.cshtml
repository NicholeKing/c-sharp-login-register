@{
    ViewData["Title"] = "Register";
}
@model RUser
<div>
	<h1 style="text-align: center;">Register</h1>
	<form action="/Reg" method="post" class="col-6" style="margin: 0px auto;">
		<div class="form-group">
			<label>First Name</label>
			<span asp-validation-for="FirstName" style="color:red;"></span>
			<input asp-for="FirstName" class="form-control">
		</div>
		<div class="form-group">
			<label>Last Name</label>
			<span asp-validation-for="LastName" style="color:red;"></span>
			<input asp-for="LastName" class="form-control">
		</div>
		<div class="form-group">
			<label>Email</label>
			<span asp-validation-for="Email" style="color:red;"></span>
			<input asp-for="Email" class="form-control">
		</div>
		<div class="form-group">
			<label>Password</label>&nbsp;<small>(Must be at least 8 characters)</small>
			<span asp-validation-for="Password" style="color:red;"></span>
			<input asp-for="Password" type="password" class="form-control">
		</div>
		<div class="form-group">
			<label>Confirm Password</label>
			<span asp-validation-for="Confirm" style="color:red;"></span>
			<input asp-for="Confirm" type="password" class="form-control">
		</div>
		<input type="submit" value="Sell Your Soul" class="btn btn-danger">
	</form>
	<a href="/login" style="color: #a38884; text-decoration: none; float:right; margin-right: 20px;">(Already did? Good. Click here)</a>
</div>