@{
    ViewData["Title"] = "Login";
}
@model LUser

<div>
	<h1 style="text-align: center;">Welcome back, lost soul...</h1>
	<form action="/logCheck" method="post" class="col-6" style="margin: 0 auto;">
		<div class="form-group">
			<label>Email</label>
			<span asp-validation-for="Email" style="color: red;"></span>
			<input asp-for="Email" class="form-control">
		</div>
		<div class="form-group">
			<label>Password</label>
			<span asp-validation-for="Password" style="color: red;"></span>
			<input asp-for="Password" type="password" class="form-control">
		</div>
		<input type="submit" value="Hello again..." class="btn btn-danger">
	</form>
	<a href="/" style="color: #a38884; text-decoration: none; float:right; margin-right: 20px;">(Not a member? You will be...)</a>
</div>